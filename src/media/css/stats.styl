@import 'lib';

.apps {
    width: 100%;
    .app div {
        border-bottom: 1px solid #ccc;
        color: #3b3b3b;
        float: left;
        font-size: 13px;
        font-weight: 600;
        height: 20px;
        padding: 16px 0 16px 0;
        text-align: center;
        width: 20%;
    }
    .app .app-name {
        font-size: 14px;
        text-align: left;
        a {
            padding-left: 56px;
        }
        img {
            position: absolute;
            margin: -5px 0 0 10px;
        }
    }
    .head {
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
        color: #75767b;
        float: left;
        font-size: 13px;
        font-weight: 600;
        padding: 25px 0 4px 0;
        text-align: center;
        width: 20%;
    }
}

$dash-tile-height = 150px;
$dash-tile-width = 290px;

.dashboard {
    border-right: 1px solid #a9a9a9;
    list-style-type: none;
    margin-top: 30px;
    width: 700px;
    // This will need some RTL love eventually.
    a {
        color: #6c6c6c;
        display: block;
        font-weight: 600;
        height: 100%;
        padding: 10px;
        position: absolute;
        width: 100%;
        z-index: 10;
        &:hover {
            text-decoration: none;
        }
        span {
            border: 1px solid #cccccc;
            border-radius: 2px;
            display: block;
            gradientLeft(unquote('rgba(255,255,255,0.2) 0%, rgba(226,226,226,0.2) 100%'));
            line-height: 150px;
            margin: -10px 0 0 -10px;
            padding: 0 10px;
            width: 290px;
        }
        span:hover {
            border-bottom: 3px solid #e66000;
        }
    }
    li {
        background-color: #fff;
        float: left;
        height: $dash-tile-height;
        margin: 0 15px 45px 30px;
        position: relative;
        width: $dash-tile-width;
    }
    li, a {
        border-radius: 3px;
    }
    svg {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 5;
    }
}

.dashboard-controls {
    background-color: #efefef;
    height: 40px;
    margin: 0 auto;
    width: 100%;
}

.dashboard-summary-metrics {
    background-repeat: repeat-x;
    gradientLeft(unquote('rgba(49,48,48,1) 0%, rgba(64,64,64,1) 100%'));
    height: 110px;
    margin: 0 auto;
    width: 100%;
    .head {
        border-bottom: 0;
        border-top: 0;
        color: white;
        float: right;
        font-size: 24px;
        font-weight: 600;
        height: 50px;
        padding: 30px 0 4px 0;
        text-align: center;
        width: 170px;
        .tiny {
            font-size: 12px;
            font-weight: 600;
            margin-top: -2px;
        }
    }
    .head-rightmost {
         margin-right: 120px;
    }
}

@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0turn); }
    to { -webkit-transform: rotate(1turn); }
}
@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

.roll {
    animation(unquote('0.9s spin 1 steps(30)'));
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

ul {
    list-style-position: inside;
}

@media $at-least-desktop {
    html, #footer {
        background: #fff;
    }

    #footer,
    #directory-footer {
        border-top: 1px solid $cloud-gray;
        padding: 48px 0;
        ul {
            list-style: none;
        }
    }

    #directory-footer {
        font-size: 15px;
        line-height: 18px;
        .links a {
            font-weight: 300;
            margin-top: 8px;
            + a {
                margin-top: 10px;
            }
        }
        .devhub {
            font-weight: 500;
            width: 290px;
            // TODO: Get Michael to vectorize this as an SVG.
            &:before {
                background: url(../img/pretty/rocket.png) 0 50% no-repeat;
                background-size: 20px auto;
                content: "";
                display: inline-block;
                height: 100%;
                vertical-align: top;
                width: 28px;
            }
        }
        .group {
            float: left;
            min-height: 48px;
            position: relative;
            a {
                display: block;
            }
            + .group {
                padding-left: 68px;
                max-width: 200px;
            }
        }
    }

    #page .main,
    .main {
        max-width: $desktop-content;
    }

    .container {
        &.product-details,
        &.results {
            margin: 50px 0;
        }
        &.prose,
        &.form-grid {
            padding: 25px;
        }
    }

    #footzilla {
        background: url(../img/logos/footzilla.png) 0 3px no-repeat;
        float: left;
        width: 100px;
        a {
            display: block;
            height: 26px;
            hidetext();
            width: 80px;
        }
    }

    #footer {
        color: $note-gray;
        overflow: hidden;
        padding: 20px 0;
        width: 100%;
        .pad {
            margin: 0 auto;
            padding: 0;
            width: 1024px;
        }
        p, ul {
            border-left: 1px dotted $light-gray;
            font-size: 11px;
            line-height: 1.3;
            margin: 0;
            padding-left: 1em;
        }
        p {
            float: left;
            width: 60%;
        }
        ul {
            float: right;
            line-height: 1.2;
            width: 20%;
            a {
                display: block;
            }
        }
        li + li {
            margin-top: 2px;
        }
    }

    #site-footer {
        display: block;
    }

    .newsletter {
        display: none;
    }

    @media $retina {
        #footzilla {
            background-image: url(../img/logos/footzilla-2x.png);
            background-size: 81px auto;
        }
    }
} // End of Desktop.

#directory-footer .group .region {
    background-repeat: no-repeat;
    background-size: 20px auto;
    margin-top: 6px;
    min-height: 20px;
    overflow: visible;
    padding: 2px 0 0 28px;
    text-overflow: normal;
}

for region in $regions
    .region-{region} {
        background-image: url(unquote('../img/icons/regions/' + region + '.png'));
    }

@media $retina {
    .spinner {
        spinner-base-image('retina');
        &.alt {
            spinner-alt-image('retina');
        }
    }
}

.page-container-app {
    background-color: white;
    border: 0px solid #d7d7d7;
    border-radius: 4px;
    box-shadow: 1px 1px 8px #a5a5a5;
    margin: 30px auto 50px auto;
    padding-bottom:30px;
    width: 900px;
}

.sidebar {
    float: right;
    height: 780px;
    margin: 30px 5px 0 0;
    width: 180px;
    li {
        margin-bottom: -2px;
    }
    ol {
        color: #7b7b7b;
        font-size: 80%;
        margin-bottom: 50px;
        padding-left: 30px;
    }
}

.tiny {
    color: #a0a0a0;
    font-size: 11px;
    font-weight: 300;
}
